---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../style.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Welcome | Village of Round Lake Park</title>
	</head>
	<body class="antialiased font-sans bg-canvas text-[#565656]">
		<div class="absolute top-0 w-full -z-10">
			<div class="bg-[url('/background.jpg')] h-[600px] bg-fit bg-[center_top_-25rem]"></div>
			<div class="absolute top-[216px] w-full backdrop-blur-[2px] h-[390px] bg-linear-to-b from-[rgba(0,0,0,0)] to-[#F2F2F2]"></div>
		</div>
		<Header />
		<div class="container">
			<slot />
		</div>
		<Footer />
	</body>
</html>
